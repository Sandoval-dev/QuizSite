@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<style>
    :root {
        --charcoal: #264653;
        --persian-green: #2a9d8f;
        --saffron: #e9c46a;
        --sandy-brown: #f4a261;
        --burnt-sienna: #e76f51;
        --white: #fff;
        --gray-light: #f8f9fa;
        --gray-medium: #6c757d;
        --dark-blue: #1a3a5f;
    }

    /* Hero Slider */
    .hero-slider {
        position: relative;
        height: 20vh;
        min-height: 600px;
        overflow: hidden;
    }

    .slide {
        position: absolute;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        opacity: 0;
        transition: opacity 1.5s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }

    .slide.active {
        opacity: 1;
    }

    .slide-content {
        max-width: 800px;
        padding: 0 2rem;
        z-index: 2;
    }

    .slide::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
    }

    .slide-1 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://source.unsplash.com/random/1920x1080/?quiz,exam');
    }

    .slide-2 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://source.unsplash.com/random/1920x1080/?education,learning');
    }

    .slide-3 {
        background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://source.unsplash.com/random/1920x1080/?brain,mind');
    }

    .slider-nav {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 5;
        display: flex;
        gap: 1rem;
    }

    .slider-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.5);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .slider-dot.active {
        background: var(--saffron);
        transform: scale(1.3);
    }

    .quiz-logo {
        font-size: 4rem;
        font-weight: 800;
        color: var(--saffron);
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
        margin-bottom: 1rem;
        position: relative;
        display: inline-block;
    }

    .quiz-logo::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: var(--saffron);
        border-radius: 2px;
    }

    .hero-icon {
        font-size: 5rem;
        color: white;
        margin-bottom: 1.5rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {

        0%,
        100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }
    }

    .hero-lead {
        font-size: 1.3rem;
        max-width: 700px;
        margin: 0 auto 2rem;
        opacity: 0.9;
    }

    /* Features Section */
    .features-section {
        padding: 5rem 0;
        background: linear-gradient(to bottom, #f9fafb, #f0f4f8);
        position: relative;
    }

    .section-title {
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: var(--persian-green);
        border-radius: 2px;
    }

    .feature-box {
        background-color: white;
        border-radius: 1rem;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        text-align: center;
        height: 100%;
        border: 1px solid rgba(0, 0, 0, 0.03);
        position: relative;
        overflow: hidden;
    }

    .feature-box::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, var(--persian-green), var(--saffron));
    }

    .feature-box:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }

    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        color: var(--persian-green);
        transition: transform 0.3s ease;
    }

    .feature-box:hover .feature-icon {
        transform: scale(1.1);
    }

    .feature-title {
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--charcoal);
    }

    .feature-text {
        color: var(--gray-medium);
        line-height: 1.6;
    }


    /* Categories Section */
    .categories-section {
        padding: 5rem 0;
        background: white;
    }

    .category-badge {
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-block;
        margin: 0.5rem;
    }

    .category-badge:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .stats-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, #2a9d8f 0%, #264653 100%);
        color: white;
        position: relative;
        overflow: hidden;
        margin-bottom: 2px;
        padding-left: 15px;
        padding-right: 15px;
    }

    .stats-section .container {
        max-width: 1140px;
        /* Bootstrap max-width */
        margin: 0 auto;
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 2.5rem 1.5rem;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
        position: relative;
        overflow: hidden;
        z-index: 1;
        height: 100%;

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .stat-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #e9c46a;
        opacity: 0.9;
        transition: transform 0.3s ease;
    }

    .stat-card:hover .stat-icon {
        transform: scale(1.2);
    }

    .stat-card h3 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(to right, #fff, #e9c46a);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        display: inline-block;
    }

    .stat-card h3::after {
        content: '+';
        position: absolute;
        right: -20px;
        top: 10px;
        font-size: 1.5rem;
        color: #e9c46a;
    }

    .stat-card p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin: 0;
        position: relative;
        display: inline-block;
    }

    .stat-card p::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 2px;
        background: #e9c46a;
        border-radius: 2px;
    }

    /* Responsive */
    @@media
    (max-width: 991px) {
        .stat-card {
            margin-bottom: 1.5rem;
        }
    }

    @@media
    (max-width: 576px) {
        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 0.75rem;
        }

        .stat-card h3 {
            font-size: 2.2rem;
        }

        .stat-card p {
            font-size: 1rem;
        }
    }

    /* Quiz Cards */
    .quizzes-section {
        padding: 5rem 0;
        background: var(--gray-light);
    }

    .quiz-card {
        border-radius: 1rem;
        background: white;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
        border: none;
        overflow: hidden;
        position: relative;
    }

    .quiz-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, var(--saffron), var(--burnt-sienna));
    }

    .quiz-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-title {
        font-weight: 700;
        color: var(--charcoal);
        margin-bottom: 1rem;
    }

    .card-text {
        color: var(--gray-medium);
        flex-grow: 1;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .quiz-category {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--persian-green);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }

    .quiz-category i {
        margin-right: 8px;
    }

    /* Buttons */
    .btn-quiz {
        background: linear-gradient(135deg, var(--saffron), var(--sandy-brown));
        color: var(--charcoal);
        font-weight: 600;
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(244, 162, 97, 0.3);
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-quiz:hover {
        background: linear-gradient(135deg, var(--sandy-brown), var(--burnt-sienna));
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(231, 111, 81, 0.4);
    }

    .btn-quiz i {
        margin-left: 8px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .quiz-logo {
            font-size: 3rem;
        }

        .hero-icon {
            font-size: 4rem;
        }

        .feature-box {
            padding: 2rem;
        }

        .section-title::after {
            bottom: -10px;
        }

        .hero-slider {
            height: 80vh;
            min-height: 500px;
        }
    }
</style>

