    <div class="intro-card text-center">
        <h1 class="quiz-title">@Model.Title</h1>
        <p class="quiz-description">@Model.Description</p>

        <div class="quiz-info text-start">
            <div class="info-item">
                <span class="info-icon">üìÇ</span>
