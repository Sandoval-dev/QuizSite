@model QuizViewModel
@{
    ViewData["Title"] = "Quiz'e Ba≈üla";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<style>
    :root {
        --charcoal: #264653;
        --persian-green: #2a9d8f;
        --saffron: #e9c46a;
        --sandy-brown: #f4a261;
        --burnt-sienna: #e76f51;
        --white: #fff;
        --gray-light: #f8f9fa;
        --gray-medium: #6c757d;
        --dark-blue: #1a3a5f;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
        font-family: 'Poppins', sans-serif;
    }

    .quiz-intro-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 15px;
    }

    .intro-card {
        background: var(--white);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: none;
    }

    .intro-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 8px;
        background: linear-gradient(90deg, var(--persian-green), var(--saffron), var(--burnt-sienna));
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(40px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .quiz-title {
        color: var(--dark-blue);
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 25px;
        position: relative;
        display: inline-block;
        opacity: 0;
        animation: fadeIn 0.8s ease forwards;
        animation-delay: 0.3s;
    }

    .quiz-title::after {
        content: '';
        position: absolute;
        bottom: -12px;
        left: 0;
        width: 220px;
        height: 4px;
        background: var(--saffron);
        border-radius: 2px;
        transform-origin: left;
        animation: lineGrow 0.8s cubic-bezier(0.785, 0.135, 0.15, 0.86) forwards;
        animation-delay: 0.5s;
    }

    @@keyframes lineGrow {
        0% {
            transform: scaleX(0);
        }

        100% {
            transform: scaleX(1);
        }
    }

    @@keyframes fadeIn {
        to {
            opacity: 1;
        }
    }

    .quiz-description {
        font-size: 1.2rem;
        color: var(--charcoal);
        margin-bottom: 30px;
        line-height: 1.6;
        opacity: 0;
        animation: fadeIn 0.8s ease forwards;
        animation-delay: 0.7s;
    }

    .quiz-info {
        background: rgba(248, 249, 250, 0.7);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        border-left: 4px solid var(--persian-green);
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        font-size: 1.1rem;
        opacity: 0;
        transform: translateX(-20px);
        animation: slideIn 0.6s ease forwards;
    }

    .info-item:nth-child(1) {
        animation-delay: 0.9s;
    }

    .info-item:nth-child(2) {
        animation-delay: 1.0s;
    }

    .info-item:nth-child(3) {
        animation-delay: 1.1s;
    }

    @@keyframes slideIn {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .info-icon {
        width: 30px;
        height: 30px;
        background: var(--persian-green);
        color: white;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .emoji-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 30px 0;
    }

    .emoji {
        font-size: 2.5rem;
        opacity: 0;
        transform: translateY(20px);
        animation: emojiFloat 3s ease-in-out infinite, fadeInUp 0.8s ease forwards;
        will-change: transform;
        /* Performans optimizasyonu */
    }

    .emoji:nth-child(1) {
        animation-delay: 1.3s, 1.3s;
    }

    .emoji:nth-child(2) {
        animation-delay: 1.5s, 1.5s;
    }

    .emoji:nth-child(3) {
        animation-delay: 1.7s, 1.7s;
    }

    @@keyframes emojiFloat {

        0%,
        100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }
    }

    .ready-text {
        font-size: 1.3rem;
        color: var(--dark-blue);
        font-weight: 600;
        margin-bottom: 25px;
        opacity: 0;
        animation: fadeIn 0.8s ease forwards;
        animation-delay: 1.9s;
    }

    .btn-start {
        background: linear-gradient(135deg, var(--persian-green), var(--dark-blue));
        color: white;
        border: none;
        padding: 16px 40px;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(42, 157, 143, 0.3);
        position: relative;
        overflow: hidden;
        opacity: 0;
        animation: fadeIn 0.8s ease forwards;
        animation-delay: 2.1s;
    }

    .btn-start:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 25px rgba(42, 157, 143, 0.4);
        background: linear-gradient(135deg, var(--saffron), var(--sandy-brown));
        color: var(--charcoal);
    }

    .btn-start:active {
        transform: translateY(1px);
    }

    .btn-start::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg,
                rgba(255, 255, 255, 0.1) 0%,
                rgba(255, 255, 255, 0.3) 50%,
                rgba(255, 255, 255, 0.1) 100%);
        animation: btnShine 3s infinite;
    }

    @@keyframes btnShine {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(100%);
        }
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .quiz-title {
            font-size: 2rem;
        }

        .quiz-description {
            font-size: 1rem;
        }

        .info-item {
            font-size: 1rem;
        }

        .emoji {
            font-size: 2rem;
        }

        .btn-start {
            padding: 14px 30px;
            font-size: 1.1rem;
        }
    }

    .countdown-container {
        max-width: 500px;
        margin: 0 auto;
    }

    .countdown-card {
        background: rgba(248, 249, 250, 0.9);
        border-radius: 15px;
        padding: 20px;
        display: flex;
        align-items: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border-left: 4px solid var(--burnt-sienna);
    }

    .countdown-icon {
        background: var(--burnt-sienna);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-right: 20px;
        flex-shrink: 0;
    }

    .countdown-content {
        text-align: left;
    }

    .countdown-content h4 {
        color: var(--charcoal);
        margin-bottom: 5px;
        font-weight: 600;
    }

    .countdown-content p {
        color: var(--gray-medium);
        margin-bottom: 10px;
        font-size: 0.9rem;
    }

    .countdown-timer {
        display: flex;
        align-items: center;
        font-size: 1.2rem;
        color: var(--dark-blue);
        font-weight: 700;
    }

    .countdown-digits {
        background: var(--dark-blue);
        color: white;
        padding: 5px 12px;
        border-radius: 8px;
        margin-right: 8px;
        min-width: 50px;
        text-align: center;
        display: inline-block;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Animasyon i√ßin ek stil */
    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    .countdown-digits {
        animation: pulse 1.5s infinite;
    }
</style>

