@if (TempData["Message"] != null)
{
    <div class="alert d-flex align-items-center justify-content-between" role="alert"
        style="background-color: var(--saffron); color: var(--charcoal); border-radius: 10px; padding: 1rem 1.25rem; box-shadow: 0 4px 10px rgba(0,0,0,0.1); margin-top: 1.5rem;">

        <div class="d-flex align-items-center">
            <i class="fa-solid fa-circle-info me-2" style="color: var(--charcoal); font-size: 1.2rem;"></i>
            <span>@TempData["Message"]</span>
        </div>

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"
            style="filter: brightness(0.5);"></button>

        <style>
            :root {
                --charcoal: #264653;
                --persian-green: #2a9d8f;
                --saffron: #e9c46a;
                --sandy-brown: #f4a261;
                --burnt-sienna: #e76f51;
            }
        </style>

    </div>

}
