@model List<UserViewModel>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --charcoal: #264653;
        --persian-green: #2a9d8f;
        --saffron: #e9c46a;
        --sandy-brown: #f4a261;
        --burnt-sienna: #e76f51;
        --danger-red: #e63946;
    }

    /* Base Styles */
    .btn-custom {
        background-color: var(--persian-green);
        color: #fff;
        transition: all 0.3s ease;
    }

    .btn-custom:hover {
        background-color: var(--sandy-brown);
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    /* Table Styles */
    .table thead {
        background-color: var(--charcoal);
        color: white;
    }

    .table tbody tr {
        transition: all 0.2s ease;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }

    /* Page Title */
    .page-title {
        position: relative;
        display: inline-block;
        font-weight: 700;
    }

    .page-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, var(--persian-green), var(--sandy-brown));
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }

    .page-title:hover::after {
        transform: scaleX(1);
    }

    /* Table Container */
    .table-container {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }

    .table th {
        font-weight: 600;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table td {
        vertical-align: middle;
        padding: 0.75rem 1rem;
    }

    /* Buttons */
    .btn-outline-danger {
        transition: all 0.3s ease;
        border-width: 1px;
    }

    .btn-outline-danger:hover {
        transform: scale(1.1);
        box-shadow: 0 2px 8px rgba(231, 111, 81, 0.3);
    }

    /* Animations */
    .fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(42, 157, 143, 0.4); }
        70% { transform: scale(1.02); box-shadow: 0 0 0 10px rgba(42, 157, 143, 0); }
        100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(42, 157, 143, 0); }
    }

    .no-users {
        padding: 2.5rem;
        background-color: #f8f9fa;
        border-radius: 10px;
        animation: bounceIn 0.6s;
        border: 1px dashed #dee2e6;
    }

    @@keyframes bounceIn {
        0% { transform: scale(0.9); opacity: 0; }
        50% { transform: scale(1.05); opacity: 1; }
        100% { transform: scale(1); }
    }

    /* Avatar Styles */
    .avatar-sm {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        background-color: var(--saffron);
        color: var(--charcoal);
    }

    .avatar-lg {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
        background-color: var(--saffron);
        color: var(--charcoal);
    }

    /* Modal Styles */
    .modal-content {
        border: none;
        box-shadow: 0 12px 28px rgba(0,0,0,0.2);
        border-radius: 10px;
        overflow: hidden;
    }

    .modal-header {
        padding: 1.5rem;
        border-bottom: none;
        position: relative;
        background: linear-gradient(135deg, var(--danger-red), var(--burnt-sienna));
        color: white;
    }

    .modal-title-container {
        width: 100%;
        text-align: center;
        padding: 0.5rem;
    }

    .modal-title {
        font-weight: 700;
        letter-spacing: 0.5px;
        font-size: 1.25rem;
        margin: 0;
    }

    .modal-subtitle {
        font-size: 0.85rem;
        opacity: 0.9;
        margin-top: 0.25rem;
    }

    .modal-icon-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(255,255,255,0.15);
        margin-right: 1rem;
        transition: transform 0.3s ease;
    }

    .modal-body {
        padding: 1.75rem;
    }

    .modal-footer {
        padding: 1.25rem 1.75rem;
        border-top: 1px solid rgba(0,0,0,0.05);
        background-color: #f8f9fa;
    }

    .danger-alert {
        background-color: rgba(230, 57, 70, 0.08);
        border-left: 4px solid var(--danger-red);
        border-radius: 0 6px 6px 0;
    }

    /* Buttons */
    .btn-modal-cancel {
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        border: 1px solid #dee2e6;
    }

    .btn-modal-delete {
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        background: linear-gradient(to right, var(--danger-red), var(--burnt-sienna));
        border: none;
        box-shadow: 0 2px 6px rgba(230, 57, 70, 0.3);
        transition: all 0.3s ease;
    }

    .btn-modal-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(230, 57, 70, 0.4);
    }

    /* Badges */
    .badge-admin {
        background-color: #6c757d;
    }

    .badge-user {
        background-color: #6c757d;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .table td, .table th {
            padding: 0.5rem;
        }
        
        .modal-body, .modal-footer {
            padding: 1.25rem;
        }
    }
</style>

<div class="container mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 page-title">ðŸ‘¥ User Management</h2>
        <div class="pulse">
            <span class="badge rounded-pill py-2 px-3" style="background-color: var(--persian-green); font-size: 0.9rem;">
                Total Users: @Model.Count
            </span>
        </div>
    </div>

    <div class="card border-0 table-container">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Registered</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            var modalId = $"deleteModal_{user.Id}";
                            var userName = user.UserName.Substring(0, user.UserName.IndexOf("@"));
                            <tr class="align-middle">
                                <td>@user.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-2">
                                            @userName.Substring(0, 1).ToUpper()
                                        </div>
                                        <span>@userName</span>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge rounded-pill @(user.Role == "Admin" ? "badge-admin" : "badge-user") py-2">
                                        @user.Role
                                    </span>
                                </td>
                                <td>@user.RegisteredDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <button disabled class="btn btn-sm btn-outline-secondary" title="Admin users cannot be deleted">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button data-bs-toggle="modal" data-bs-target="#@modalId" class="btn btn-sm btn-outline-danger" title="Delete user">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                </td>
                            </tr>

                            <!-- Delete User Modal -->
                            <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@($"{modalId}_label")" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div class="d-flex align-items-center w-100 justify-content-center">
                                                <div class="modal-icon-circle">
                                                    <i class="fas fa-user-slash"></i>
                                                </div>
                                                <div class="modal-title-container">
                                                    <h5 class="modal-title text-white" id="@($"{modalId}_label")">
                                                        DELETE USER: <span class="text-warning">@userName</span>
                                                    </h5>
                                                    <div class="modal-subtitle text-white-50">Confirm Account Deletion</div>
                                                </div>
                                            </div>
                                            <button type="button" class="btn-close btn-close-white position-absolute" style="top: 1.5rem; right: 1.5rem;" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="d-flex align-items-center mb-4">
                                                <div class="avatar-lg">
                                                    @userName.Substring(0, 1).ToUpper()
                                                </div>
                                                <div class="ms-3">
                                                    <h6 class="mb-0 fw-bold">@userName</h6>
                                                    <small class="text-muted">@user.Email</small>
                                                </div>
                                            </div>
                                            <div class="alert danger-alert border-0">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-exclamation-circle me-3" style="color: var(--danger-red); font-size: 1.5rem;"></i>
                                                    <div>
                                                        <strong class="d-block" style="color: var(--danger-red);">Irreversible Action</strong>
                                                        <span class="text-muted">This will permanently delete the user account and all associated data from the system.</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-outline-secondary btn-modal-cancel" data-bs-dismiss="modal">
                                                <i class="fas fa-times me-2"></i> Cancel
                                            </button>
                                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                                <button type="submit" class="btn btn-danger btn-modal-delete">
                                                    <i class="fas fa-trash-alt me-2"></i> Delete Permanently
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">
                                <div class="no-users text-center py-4">
                                    <i class="fas fa-users-slash fa-3x mb-3" style="color: var(--sandy-brown);"></i>
                                    <h5 class="mb-2 fw-bold">No Users Found</h5>
                                    <p class="text-muted mb-0">It seems there are no users registered yet.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add animation to table rows when page loads
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach((row, index) => {
                row.style.animationDelay = `${index * 0.05}s`;
            });
        });

        // Tooltip initialization
        $(function () {
            $('[title]').tooltip({
                trigger: 'hover',
                placement: 'top'
            });
        });

        // Modal icon animation
        $('.modal').on('mouseenter', function() {
            $(this).find('.modal-icon-circle').css('transform', 'rotate(-15deg)');
        }).on('mouseleave', function() {
            $(this).find('.modal-icon-circle').css('transform', 'rotate(0)');
        });
    </script>
}